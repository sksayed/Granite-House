@model Granite_House.Models.ViewModel.ProductsViewModels
@using Granite_House.Extension

@{
    ViewData["Title"] = "Create";

    var ids = Model.Products.ProductTypesId;
}

<br />
<h2 class="text-info">Create Product</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.ProductName"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.ProductName" class="form-control" />
            </div>
            <span asp-validation-for="Products.ProductName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.Price" class="form-control" />
            </div>
            <span asp-validation-for="Products.Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Image"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductTypes"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.Products.ProductTypesId" asp-items="Model.selectLists" class="form-control">
                    <option value=""> Null</option>
                </select>
            </div>
        </div>
        <div>
        <span asp-validation-for="Products.ProductTypesId" class="text-danger"></span>
        </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="SpecialTags"></label>
        </div>
        <div class="col-5">
            <select asp-for="@Model.Products.SpecialTagsId" asp-items="Model.specialTagList" class="form-control">
                <option value=""> Null</option>
            </select>
        </div>
    </div>
        <div>
    <span asp-validation-for="Products.SpecialTagsId" class="text-danger"></span>
    </div>
    
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Products.ShadeColor"></label>
        </div>
        <div class="col-5">
            <input asp-for="Products.ShadeColor" class="form-control" />
        </div>
        <span asp-validation-for="Products.ShadeColor" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Products.Available"></label>
        </div>
        <div class="col-5">
            <input type="checkbox" asp-for="Products.Available" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Create" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
