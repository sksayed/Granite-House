@model Granite_House.Models.SpecialTags
@{
    ViewData["Title"] = "Create Tag";
}

<h2 class="text-info"> Create a New SpecialTag </h2>

<form method="post" asp-action="Create">
    <div class="p-4 border rounded">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-1">
                <label asp-for="TagName"> TagName</label>
            </div>
            <div class="col-5">
                <input asp-for="TagName" class="form-control " />
            </div>
            <span asp-validation-for="TagName" class="text-danger"></span>

        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success"> Back To list </a>
        </div>
    </div>

</form>

@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

